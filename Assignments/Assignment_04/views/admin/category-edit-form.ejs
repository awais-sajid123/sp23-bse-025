<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top">
            <h4 class="mb-0">Edit Category</h4>
        </div>
        <div class="card-body bg-light">
            <form action="" method="post">
                <!-- Title -->
                <div class="form-group mb-4">
                    <label for="title" class="form-label fw-bold text-secondary">Title</label>
                    <input 
                        name="title" 
                        type="text" 
                        class="form-control border-primary rounded-3 shadow-sm" 
                        value="<%= category.title %>"
                        placeholder="Enter Product Title" 
                    />
                </div>

                <!-- Description -->
                <div class="form-group mb-4">
                    <label for="description" class="form-label fw-bold text-secondary">Description</label>
                    <textarea 
                        name="description" 
                        class="form-control border-primary rounded-3 shadow-sm" 
                        rows="4" 
                        placeholder="Enter Product Description"
                    ><%= category.description %></textarea>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <button class="btn btn-info text-white fw-bold px-4 py-2 shadow">
                        <i class="fas fa-save me-2"></i>Edit Record
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
