<script>
    document.addEventListener('DOMContentLoaded', function () {
  const productsPerPage = 3; // Number of products to show per page
  const productCards = document.querySelectorAll('.product-card');
  const totalPages = Math.ceil(productCards.length / productsPerPage);
  const paginationControls = document.getElementById('pagination-controls');

  // Function to render products for the current page
  function renderProducts(page) {
    productCards.forEach((card, index) => {
      card.style.display =
        index >= (page - 1) * productsPerPage && index < page * productsPerPage
          ? 'block'
          : 'none';
    });
  }

  // Function to render pagination buttons
  function renderPagination() {
    for (let i = 1; i <= totalPages; i++) {
      const btn = createPageButton(i);
      paginationControls.appendChild(btn);
    }
  }

  // Function to create a page button
  function createPageButton(pageNumber) {
    const btn = document.createElement('button');
    btn.innerText = pageNumber;
    btn.classList.add('page-btn');
    btn.addEventListener('click', function () {
      renderProducts(pageNumber);
      updateActiveButton(pageNumber);
    });
    if (pageNumber === 1) btn.classList.add('active'); // Mark the first page as active
    return btn;
  }

  // Function to update the active button
  function updateActiveButton(activePage) {
    document.querySelectorAll('.page-btn').forEach((btn) => {
      btn.classList.toggle('active', btn.innerText == activePage);
    });
  }

  // Initialize the page
  renderPagination();
  renderProducts(1); // Start with the first page
});

</script>
