<!-- Font Awesome CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

</head>
<body>
  <!-- Header -->
  <%- include('partials/header') %>
  
  <!-- Main Content -->
  <main>
    <%- include(body) %>
  </main>
  
  <!-- Footer -->
  <%- include('partials/contact-us') %>
  
