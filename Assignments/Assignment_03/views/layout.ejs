</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script>
    // Wait until the DOM is fully loaded
document.addEventListener("DOMContentLoaded", function () {
    // === Side Menu Functionality ===
    const menuBtn = document.getElementById("menu-btn");
    const sideMenu = document.getElementById("side-menu-panel");
    const closeMenu = document.getElementById("close-menu");

    // Create and append overlay
    const overlay = document.createElement("div");
    overlay.id = "menu-overlay";
    overlay.style.position = "fixed";
    overlay.style.top = "0";
    overlay.style.left = "0";
    overlay.style.width = "100%";
    overlay.style.height = "100%";
    overlay.style.backgroundColor = "rgba(0, 0, 0, 0.5)";
    overlay.style.zIndex = "999";
    overlay.style.display = "none";
    document.body.appendChild(overlay);

    // Open side menu
    menuBtn.addEventListener("click", (e) => {
        e.preventDefault(); // Prevent default anchor behavior
        sideMenu.style.transform = "translateX(0)"; // Show side menu
        overlay.style.display = "block"; // Show overlay
    });

    // Close side menu (button click)
    closeMenu.addEventListener("click", () => {
        sideMenu.style.transform = "translateX(-100%)"; // Hide side menu
        overlay.style.display = "none"; // Hide overlay
    });

    // Close side menu (overlay click)
    overlay.addEventListener("click", () => {
        sideMenu.style.transform = "translateX(-100%)"; // Hide side menu
        overlay.style.display = "none"; // Hide overlay
    });

    // === Footer Column Toggle ===
    document.querySelectorAll('.footer-col').forEach(function (col) {
        col.addEventListener('click', function () {
            document.querySelectorAll('.footer-col').forEach(function (c) {
                c.classList.remove('active'); // Remove 'active' class from other columns
            });
            col.classList.toggle('active'); // Toggle 'active' class for the clicked column
        });
    });

    // === Search Bar Functionality ===
    const searchIcon = document.querySelector('.fa-magnifying-glass');
    const searchBar = document.getElementById('search-bar');
    const closeSearchButton = document.getElementById('close-search');

    searchIcon.addEventListener('click', (e) => {
        e.preventDefault(); // Prevent default anchor behavior
        searchBar.classList.remove('d-none'); // Show search bar
    });

    closeSearchButton.addEventListener('click', () => {
        searchBar.classList.add('d-none'); // Hide search bar
    });

    // === Login Page Functionality ===
    const loginIcon = document.querySelector('.fa-user');
    const loginPage = document.getElementById('login-page');
    const closeLoginButton = document.getElementById('close-login');

    loginIcon.addEventListener('click', (e) => {
        e.preventDefault(); // Prevent default anchor behavior
        loginPage.classList.remove('d-none'); // Show login page
    });

    closeLoginButton.addEventListener('click', () => {
        loginPage.classList.add('d-none'); // Hide login page
    });

    // === Cart Page Functionality ===
    const cartIcon = document.querySelector('.fa-cart-shopping');
    const cartPage = document.getElementById('cart-page');
    const closeCartButton = document.getElementById('close-cart');

    cartIcon.addEventListener('click', (e) => {
        e.preventDefault(); // Prevent default anchor behavior
        cartPage.classList.remove('d-none'); // Show cart page
    });

    closeCartButton.addEventListener('click', () => {
        cartPage.classList.add('d-none'); // Hide cart page
    });
});
</script>
</html>
