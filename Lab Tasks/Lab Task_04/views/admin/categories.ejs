<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-primary">Categories</h1>
      <a href="/admin/categories/create" class="btn btn-primary shadow">
        <i class="fas fa-plus me-2"></i>Add Category
      </a>
    </div>
  
    <table class="table table-hover table-striped shadow rounded bg-white">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(category => { %>
          <tr>
            <td><%= category.title %></td>
            <td><%= category.description %></td>
            <td class="text-center">
              <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-warning btn-sm me-2 shadow-sm">
                <i class="fas fa-edit me-1"></i>Edit
              </a>
              <a href="/admin/categories/delete/<%= category._id %>" class="btn btn-danger btn-sm shadow-sm">
                <i class="fas fa-trash-alt me-1"></i>Delete
              </a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  