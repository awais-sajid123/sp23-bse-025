<h1>Categories</h1>
<a href="/admin/categories/create" class="btn btn-primary">Add Category</a>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% categories.forEach(category => { %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <td>
          <a href="/admin/categories/edit/<%= category._id %>"class="btn btn-warning">Edit</a>
          <a href="/admin/categories/delete/<%= category._id %>"class="btn btn-danger">Delete</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
